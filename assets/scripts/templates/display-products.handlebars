<h2> Our Wonderful Turtle Sweaters: </h2>
{{#each products}}
<div id=div{{_id}} class="col-md-12 product">
  <img src="./assets/images/turtle-sweaters/{{image}}"
       alt="./assets/images/turtle-sweaters/taco.jpg"
       height="242"
       width="292">
  <h3 class="float-right name">{{name}}</h3>
  <!-- <p class="_id">
  {{_id}}
  </p> -->
  <h4 class="float-right price" id ="price">
  ${{price}}
  </h4>
  <div class="col-md-9 float-left">
    <h4>Description:</h4>
    <p class="description">
    {{description}}
    </p>
  </div>
  <form class="add-to-cart">
    <fieldset>
      <input class="input-number" type="number" name="quantity" min=1
             value=1>
      <input type="text" name="name" style="display: none"
             value="{{name}}">
      <input type="number" name="price" style="display: none"
             value="{{price}}">
      <input type="text" name="product_id" style="display: none"
             value="{{_id}}">
      <input type="text" name="image" style="display: none"
             value="{{image}}">
      <input type="submit" value="Add to Cart">
    </fieldset>
  </form>
</div>
{{/each}}

<div class="cart">
  <h2>Products in My Cart: </h2>

  {{#each cart}}
    <div class="col-md-6 productInCart">
      <img src="./assets/images/turtle-sweaters/{{image}}"
           alt="./assets/images/turtle-sweaters/taco.jpg"
           height="122"
           width="122">
      <br>
      <!-- <strong>Product Id: {{product_id}}</strong>
      <br> -->
      <strong>Name: {{name}}</strong>
      <br>
      <strong>Price: ${{price}}</strong>
      <strong>  X  {{quantity}}</strong>
      <br>
      <br>
      <br>
      <!-- delete later -->
    </div>

  {{/each}}

  <div class="checkout">
    <div class="totalAmount">
    <h3>Total Amount: ${{cart.total}}</h3>
    </div>

    <div class="stripe-checkout">

      <form id="payment-form">
        <span class="payment-errors"></span>

        <div class="form-row">
          <label>
            <span>Card Number</span>
            <input type="text" size="20" data-stripe="number">
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Expiration (MM/YY)</span>
            <input type="text" size="2" data-stripe="exp_month">
          </label>
          <span> / </span>
          <input type="text" size="2" data-stripe="exp_year">
        </div>

        <div class="form-row">
          <label>
            <span>CVC</span>
            <input type="text" size="4" data-stripe="cvc">
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Billing Zip</span>
            <input type="text" size="6" data-stripe="address_zip">
          </label>
        </div>

        <input type="submit" class="submit" value="Submit Payment">
      </form>
    </div>
    <button class ="clear-cart-button">Clear Cart</button>
  </div>
</div>
